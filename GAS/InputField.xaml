<UserControl x:Class="GAS.InputField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GAS"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="380" VerticalAlignment="Top" HorizontalAlignment="Left">
    <Grid>
        <Label x:Name="Label" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,0,0,0" Height="25"/>
        <TextBox x:Name="Input" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="230,0,0,0" Height="25" Width="150" VerticalContentAlignment="Center"/>
    </Grid>
</UserControl>
